<a href="index.html"><img src="<%= asset_path 'Worksystems Logo  (200 x 200 px).png'%>" class="avatar avatar-small mb-4 d-block mx-auto" alt=""></a>
  <h5 class="mb-3 text-center">Inicia sesión</h5>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-floating mb-2">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
  </div>

  <div class="form-floating mb-3">
    <%= f.label :Contraseña %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="d-flex justify-content-between">
      <div class="mb-3">
        <div class="form-check">
          <%= f.check_box :remember_me %>
          <%= f.label :Recuérdame %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Iniciar Sesión",class:"btn btn-primary w-100" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
