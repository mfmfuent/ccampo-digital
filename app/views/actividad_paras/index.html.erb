<p id="notice"><%= notice %></p>

<h1>Actividad Paras</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Actividads</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @actividad_paras.each do |actividad_para| %>
      <tr>
        <td><%= actividad_para.nombre %></td>
        <td><%= actividad_para.actividads_id %></td>
        <td><%= link_to 'Show', actividad_para %></td>
        <td><%= link_to 'Edit', edit_actividad_para_path(actividad_para) %></td>
        <td><%= link_to 'Destroy', actividad_para, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

