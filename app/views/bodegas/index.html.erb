<p id="notice"><%= notice %></p>

<h1>Bodegas</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Direccion</th>
      <th>Comuna</th>
      <th>Region</th>
      <th>Pais</th>
      <th>Actividads</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bodegas.each do |bodega| %>
      <tr>
        <td><%= bodega.nombre %></td>
        <td><%= bodega.descripcion %></td>
        <td><%= bodega.direccion %></td>
        <td><%= bodega.comuna %></td>
        <td><%= bodega.region %></td>
        <td><%= bodega.pais %></td>
        <td><%= bodega.actividads_id %></td>
        <td><%= link_to 'Show', bodega %></td>
        <td><%= link_to 'Edit', edit_bodega_path(bodega) %></td>
        <td><%= link_to 'Destroy', bodega, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

